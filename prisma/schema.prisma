generator client {
  provider = "prisma-client-js"
}

// 작업테이블
model Jobs {
  id       String @id @default(uuid())
  date     String
  operator String
  time     String
  job      Json
  jTot     Int
  oTot     Int
  rTot     Int
  subTot   Int
  company  String

  @@index([date])
}

// 운전자
model User {
  id      String @id @default(uuid())
  name    String
  role    Role   @default(OPERATOR)
  company String
}

// 통계용
model Summary {
  id          String @id @default(uuid())
  date        String
  yyyy        String
  mm          String
  dd          String
  company     String
  jdump       Int
  odump       Int
  rdump       Int
  total       Int
  maintenance String

  @@index([date])
}

enum Role {
  ADMIN
  OPERATOR
  GUEST
}
